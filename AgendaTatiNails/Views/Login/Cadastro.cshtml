@model AgendaTatiNails.ViewModels.CadastroViewModel
@{
    ViewData["Title"] = "Criar Conta";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login/auth.css" asp-append-version="true" />
}

<div class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Crie sua Conta</h1>
        <p class="auth-subtitle">Preencha os dados abaixo para se cadastrar.</p>

        <div asp-validation-summary="ModelOnly" class="text-danger auth-message"></div>

        <form asp-action="Cadastro" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" placeholder="Seu nome completo" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="seuemail@exemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @* CAMPO TELEFONE PRESERVADO *@
            <div class="form-group">
                <label asp-for="Telefone"></label>
                <input asp-for="Telefone" class="form-control" placeholder="(XX) 9XXXX-XXXX" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" class="form-control" placeholder="Crie uma senha forte" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmarSenha"></label>
                <input asp-for="ConfirmarSenha" class="form-control" placeholder="Confirme sua senha" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-full-width">Cadastrar</button>
            </div>
        </form>

        <div class="auth-links">
            <a asp-action="Index" class="btn-secondary">JÃ¡ tenho conta? Voltar para o Login</a>
        </div>
    </div>
</div>