@model IEnumerable<AgendaTatiNails.Models.Atendimento>

@{
    ViewData["Title"] = "Ver Agendamentos";
    
    // Recupera as datas do Controller (ou usa HOJE se for nulo)
    var dataInicio = ViewBag.DataInicio as DateTime? ?? DateTime.Today;
    var dataFim = ViewBag.DataFim as DateTime? ?? DateTime.Today;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Agendamento/agendamento-page.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="admin-header">
        <h1>@ViewData["Title"]</h1>
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" onclick="this.parentElement.style.display='none'" aria-label="Close">×</button>
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
             <div class="alert alert-danger" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" onclick="this.parentElement.style.display='none'" aria-label="Close">×</button>
            </div>
        }
    </div>

    <form method="get" asp-action="Agendamentos" class="admin-search-form">
        
        <div class="form-group">
            <label for="dataInicio">Data Início:</label>
            <input type="date" id="dataInicio" name="dataInicio" 
                   value="@dataInicio.ToString("yyyy-MM-dd")" 
                   class="form-control" />
        </div>

        <div class="form-group">
            <label for="dataFim">Data Fim:</label>
            <input type="date" id="dataFim" name="dataFim" 
                   value="@dataFim.ToString("yyyy-MM-dd")" 
                   class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-search me-2"></i> Buscar
        </button>
    </form>

    <h2 class="admin-subtitle">
        Exibindo de: <strong>@dataInicio.ToString("dd/MM/yyyy")</strong> até <strong>@dataFim.ToString("dd/MM/yyyy")</strong>
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Horário</th>
                        <th>Serviço(s)</th> 
                        <th>Status</th>
                        <th style="min-width: 150px;">Ações</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="client-name">
                                @(item.Cliente?.Usuario?.UsuarioNome ?? "N/A")
                            </td>
                            <td>
                                @item.AtendDataAtend.ToString("dd/MM/yyyy 'às' HH:mm") 
                            </td>
                            <td>
                                @(item.Servicos.Any() ? string.Join(", ", item.Servicos.Select(s => s.ServicoDesc)) : "N/A")
                            </td>
                            <td>
                                @Html.Raw(GetStatusBadge(item.AtendStatus))
                            </td>
                            <td class="admin-actions" style="white-space: nowrap;">
                                <a asp-action="Detalhes" asp-route-id="@item.AtendId" 
                                   class="btn-sm" 
                                   style="text-decoration: none; background-color: #0dcaf0; color: white; border: none; padding: 5px 10px; border-radius: 5px; font-weight: 600; margin-right: 5px; display: inline-block;" 
                                   title="Ver Detalhes">
                                   Detalhes
                                </a>

                                @if (item.AtendStatus == 1) // 1 = Agendado
                                {
                                    <a asp-action="Editar" asp-route-id="@item.AtendId" 
                                       class="btn-sm" 
                                       style="text-decoration: none; background-color: #ffc107; color: #000; border: none; padding: 5px 10px; border-radius: 5px; font-weight: 600; margin-right: 5px; display: inline-block;" 
                                       title="Editar Agendamento">
                                       Editar
                                    </a>

                                    <form asp-action="MarcarConcluido" method="post" style="display: inline-block;">
                                        <input type="hidden" name="id" value="@item.AtendId" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-sm" 
                                                style="background-color: #198754; color: white; border: none; padding: 5px 10px; border-radius: 5px; font-weight: 600; margin-right: 5px; cursor: pointer;"
                                                title="Marcar como Concluído">
                                            Concluir
                                        </button>
                                    </form>
                                    
                                    <a asp-action="Cancelar" asp-route-id="@item.AtendId" 
                                       class="btn-sm" 
                                       style="text-decoration: none; background-color: #dc3545; color: white; border: none; padding: 5px 10px; border-radius: 5px; font-weight: 600; cursor: pointer; display: inline-block;"
                                       title="Cancelar Agendamento">
                                       Cancelar
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center mt-5 no-appointments">
            <img src="https://api.iconify.design/lucide-calendar-off.svg" alt="Calendário Vazio" class="no-appointments-icon" />
            <p class="lead">Nenhum agendamento encontrado neste período.</p>
        </div>
    }
</div>

@functions {
    public string GetStatusBadge(int status)
    {
        return status switch
        {
            1 => "<span class=\"badge status-agendado\">Agendado</span>",
            2 => "<span class=\"badge status-concluido\">Concluído</span>",
            3 => "<span class=\"badge status-cancelado\">Cancelado</span>",
            _ => "<span class=\"badge status-desc\">Desconhecido</span>"
        };
    }
}