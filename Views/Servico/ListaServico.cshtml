@model IEnumerable<AgendaTatiNails.Models.Atendimento>

@{
    ViewData["Title"] = "Meus Agendamentos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Servico/lista-servicos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/admin.css" asp-append-version="true" /> <style>
        /* Estilos de Alerta */
        .alert { padding: 1rem; margin-bottom: 1rem; border: 1px solid transparent; border-radius: 0.25rem; position: relative; }
        .alert-success { color: #0f5132; background-color: #d1e7dd; border-color: #badbcc; }
        .btn-close { box-sizing: content-box; width: 1em; height: 1em; padding: .25em .25em; color: #000; background: transparent; border: 0; border-radius: .25rem; opacity: .5; position: absolute; top: .5rem; right: .5rem; z-index: 2; cursor: pointer; }
        .fade { transition: opacity .15s linear; }
        .show { opacity: 1; }
    </style>
}

<div class="container lista-servicos-container">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success show fade" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" onclick="this.parentElement.style.display='none'" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["MensagemErro"] != null)
    {
         <div class="alert alert-danger show fade" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" onclick="this.parentElement.style.display='none'" aria-label="Close"></button>
        </div>
    }

    <div class="lista-servicos-header">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-controller="Agendamento" asp-action="Index" class="btn btn-primary">
                Agendar Novo Serviço
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Data e Hora</th> <th>Serviço(s)</th> <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderBy(i => i.AtendDataAtend))
                    {
                        <tr>
                            <td>@item.AtendDataAtend.ToString("dd/MM/yyyy 'às' HH:mm")</td>
                            
                            <td>@(item.Servicos.Any() ? string.Join(", ", item.Servicos.Select(s => s.ServicoDesc)) : "N/A")</td>
                            
                            <td>@Html.Raw(GetStatusBadge(item.AtendStatus))</td>
                            
                            <td>
                                <a asp-controller="Agendamento" asp-action="Detalhes" asp-route-id="@item.AtendId" class="btn btn-info btn-sm" title="Detalhes">Detalhes</a>
                                <a asp-controller="Agendamento" asp-action="Editar" asp-route-id="@item.AtendId" class="btn btn-warning btn-sm" title="Editar">Editar</a>
                                <a asp-controller="Agendamento" asp-action="Excluir" asp-route-id="@item.AtendId" class="btn btn-danger btn-sm" title="Excluir">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center mt-5 no-appointments">
            <img src="https://api.iconify.design/lucide-calendar-x.svg" alt="Calendário Vazio" class="no-appointments-icon" />
            <p class="lead">Você ainda não possui agendamentos.</p>
            <p>Que tal agendar seu primeiro serviço conosco?</p>
        </div>
    }
</div>

@functions {
    public string GetStatusBadge(int status)
    {
        return status switch
        {
            1 => "<span class=\"badge status-agendado\">Agendado</span>",
            2 => "<span class=\"badge status-concluido\">Concluído</span>",
            3 => "<span class=\"badge status-cancelado\">Cancelado</span>",
            _ => "<span class=\"badge status-desc\">Desconhecido</span>"
        };
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Script para fechar alertas
            document.querySelectorAll('.alert .btn-close').forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('.alert').style.display = 'none';
                });
            });
            // Script para auto-fechar
            setTimeout(function() {
                document.querySelectorAll('.alert.show').forEach(alert => {
                    alert.style.opacity = '0';
                    setTimeout(() => alert.style.display = 'none', 150);
                });
            }, 5000); 
        });
    </script>
}