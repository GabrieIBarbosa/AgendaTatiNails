@model IEnumerable<AgendaTatiNails.Models.Agendamento>

@{
    ViewData["Title"] = "Ver Agendamentos";
    // Pega a data que o Controller enviou (ou define hoje como padrão)
    string dataPesquisada = ViewBag.DataPesquisada ?? DateTime.Today.ToString("yyyy-MM-dd");
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/admin.css" asp-append-version="true" />
    @* REMOVIDO o link do FullCalendar *@
    @* Adiciona CSS para o input de data nativo (reutilizado) *@
    <link rel="stylesheet" href="~/css/Agendamento/agendamento-page.css" asp-append-version="true" />
}

<div class="admin-container">
    <div class="admin-header">
        <h1>@ViewData["Title"]</h1>
        @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert" style="/* estilos de alerta */">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" onclick="this.parentElement.style.display='none'" aria-label="Close">×</button>
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
         <div class="alert alert-danger" role="alert" style="/* estilos de alerta */">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" onclick="this.parentElement.style.display='none'" aria-label="Close">×</button>
        </div>
    }
    </div>

    <form method="get" asp-action="Agendamentos" class="admin-search-form">
        <div class="form-group">
            <label for="dataPesquisa">Selecione o dia para buscar:</label>
            <input type="date" id="dataPesquisa" name="dataPesquisa" 
                   value="@dataPesquisada" 
                   class="form-control full-width-input" /> @* Reusa estilo full-width-input *@
        </div>
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    <h2 class="admin-subtitle">
        Exibindo agendamentos para: @(DateTime.Parse(dataPesquisada).ToString("dd/MM/yyyy"))
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Horário</th>
                        <th>Serviço</th>
                        <th>Status</th>
                        <th style="min-width: 150px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="client-name">
                                @(item.Cliente?.Nome ?? "N/A")
                            </td>
                            <td>
                                @item.DataHora.ToString("dd/MM/yyyy 'às' HH:mm") @* Ajustado para mostrar data completa *@
                            </td>
                            <td>
                                @(item.Servico?.Nome ?? "N/A")
                            </td>
                            <td>
                                <span class="badge status-@(item.Status?.ToLower() ?? "desc")">@item.Status</span>
                            </td>
                            <td class="admin-actions">
                                @if (item.Status == "Agendado")
                                {
                                    <form asp-action="MarcarConcluido" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-sm btn-success" title="Marcar como Concluído">Concluir</button>
                                    </form>
                                    <form asp-action="CancelarAdmin" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-sm btn-danger" title="Cancelar Agendamento">Cancelar</button>
                                    </form>
                                }
                                else
                                {
                                    <span>-</span> @* Mostra um traço se já foi Concluído/Cancelado *@
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center mt-5 no-appointments">
            <img src="https://api.iconify.design/lucide-calendar-off.svg" alt="Calendário Vazio" class="no-appointments-icon" />
            <p class="lead">Nenhum agendamento encontrado para este dia.</p>
        </div>
    }
</div>

@section Scripts {
    @* REMOVIDO o script do FullCalendar *@
}